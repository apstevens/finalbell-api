# Server Configuration
NODE_ENV=development
PORT=8080

# Database Configuration
# PostgreSQL connection string (Railway provides this automatically)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require
# For Railway: Use ${{Postgres.DATABASE_URL}} in Railway Dashboard
DATABASE_URL="postgresql://username:password@localhost:5432/final_bell_db"

# JWT Configuration
# IMPORTANT: Generate secure secrets using: node scripts/generate-secrets.js
# These MUST be at least 32 characters long
JWT_SECRET=GENERATE_NEW_SECRET_DO_NOT_USE_THIS_VALUE
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=GENERATE_NEW_SECRET_DO_NOT_USE_THIS_VALUE
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS Configuration
# Add both the marketing website and platform app domains
ALLOWED_ORIGINS=https://finalbell.co.uk,https://www.finalbell.co.uk,https://app.finalbell.co.uk

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Cloud Storage (Optional - for production)
# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-west-2
AWS_S3_BUCKET=

# Cloudinary (Alternative to S3)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@finalbell.co.uk

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Client URL (for email links, redirects, etc.)
CLIENT_URL=https://finalbell.co.uk

# Playwell FTP Configuration
# FTP credentials for downloading product CSV
PLAYWELL_FTP_HOST=161.35.45.163
PLAYWELL_FTP_USER=your-ftp-username
PLAYWELL_FTP_PASSWORD=your-ftp-password

# Admin API Configuration
# IMPORTANT: Generate using: node scripts/generate-secrets.js
# Or: openssl rand -base64 32
ADMIN_API_KEY=GENERATE_NEW_SECRET_DO_NOT_USE_THIS_VALUE

# IP Blacklist Configuration
IP_BLACKLIST_ENABLED=true
IP_BLACKLIST_UPDATE_INTERVAL_HOURS=24

# CSV Product URL
MTB_CSV_URL=https://app.matrixify.app/files/your-csv-url-here
