# Server Configuration
NODE_ENV=development
PORT=8080

# Database Configuration
# MySQL connection string
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="mysql://username:password@localhost:3306/final_bell_db"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-this-in-production
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS Configuration
# Add both the marketing website and platform app domains
ALLOWED_ORIGINS=https://finalbell.co.uk,https://www.finalbell.co.uk,https://app.finalbell.co.uk

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Cloud Storage (Optional - for production)
# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-west-2
AWS_S3_BUCKET=

# Cloudinary (Alternative to S3)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@finalbell.co.uk

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Client URL (for email links, redirects, etc.)
CLIENT_URL=https://finalbell.co.uk

# Playwell FTP Configuration
# FTP credentials for downloading product CSV
PLAYWELL_FTP_HOST=161.35.45.163
PLAYWELL_FTP_USER=your-ftp-username
PLAYWELL_FTP_PASSWORD=your-ftp-password

# Admin API Configuration
# Generate a secure random string: openssl rand -base64 32
ADMIN_API_KEY=your-secure-api-key-here
